<resources>
    <!-- Base application theme. -->
    <style name="Theme.GiphyTestCase" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>
    
    <style name="SearchView" parent="">
        <item name="android:background">@color/design_default_color_primary_variant</item>
        <item name="android:textSize">22sp</item>
        <item name="android:editTextColor">@color/material_dynamic_secondary80</item>
        <item name="android:textColorHint">@color/material_dynamic_secondary80</item>
    </style>

    <style name="ToolbarTheme" parent="ThemeOverlay.MaterialComponents.ActionBar">
        <item name="android:textColorSecondary">#EEEEEE</item>
    </style>
</resources>