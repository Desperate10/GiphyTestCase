<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/trendingFragment">

    <fragment
        android:id="@+id/trendingFragment"
        android:name="desperate.giphytestcase.presentation.screens.trending.TrendingFragment"
        android:label="TrendingFragment" >
        <action
            android:id="@+id/action_trendingFragment_to_fullScreenFragment"
            app:destination="@id/fullScreenFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim"
            app:popUpTo="@id/trendingFragment" />
    </fragment>
    <fragment
        android:id="@+id/fullScreenFragment"
        android:name="desperate.giphytestcase.presentation.screens.fullscreen.FullScreenFragment"
        android:label="fragment_full_screen"
        tools:layout="@layout/fragment_full_screen" />
</navigation>